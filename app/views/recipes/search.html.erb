<%- content_for :title, "Which ingredients?" -%>
<h1 class="standard">Frigo Magik</h1>

<div class="ingredient_selection">
  <%= form_with(url: recipes_search_path) do %>
    <div>
      <%= label_tag(:ingredients, "Ingredients:") %>
      <div class="input_area">
        <%= text_area_tag(:ingredients, @ingredients, size: "24x6") %><br />
        <div class="notice">Comma separated list of ingredients</div>
      </div>
    </div>
    <%= submit_tag("search recipes") %>
  <% end %>
</div>

<div class="result standard">
  <%- if @recipes.empty? %>
    <div style="text-align: center;">
      <strong style="font-size: 25px;">No result</strong>
    </div>
  <%- else -%>
    <ul>
    <%- @recipes.each do |recipe| -%>
      <li><%= recipe.name %></li>
    <%- end -%>
    </ul>
  <%- end -%>
</div>
